<h1><%= @song.artist.name %></h1>
<h2><%= @song.name %></h2>

<% if flash.has?(:message) %>
  <h4><%= flash[:message] %></h4>
<% end %>

<% @song.genres.each do |genre| %>
  <h2><%= genre.name %></h2>
  <h3><a href="/genres/<%= genre.slug %>">View Details</a></h3>
<% end %>
<h3><a href="/artists/<%= @song.artist.slug %>">View Details</a></h3>