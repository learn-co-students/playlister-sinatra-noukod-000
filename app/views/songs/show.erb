<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song Name: <%= @song.name %></h1>
<h3>Song's Artist Name: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>

<p><h2>Genres:</h2></p>
  <ul>
    <% @song.genres.each do |genre| %>
      <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <% end %>
  </ul>

<a href="/songs/<%= @song.slug %>/edit"><input type="button" value="Edit Song"></a>
