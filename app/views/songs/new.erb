<h1>Add a Song</h1>

<form action="/songs" method="POST">

<label for="song"><h2>Song Name:</h2></label><input type="text" name="song[name]" id="Name"><br>

<label for="artist"><h2>Artist:</h2></label><input type="text" name="song[artist]" id="Artist Name"><br>

<label for="genre"><h2>Choose an existing Genre:</h2></label><br>
<% @genres.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name %><br>
<% end %>

<br><br>
<input type="submit" value="Create">
</form>
