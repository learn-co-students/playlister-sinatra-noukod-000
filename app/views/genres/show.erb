<h1><%= @genre.name %>'s artists</h1>

<% @genre.artists.each do |artist| %>
  <h2><%= artist.name %></h2>
  <h3><a href="/artists/<%= artist.slug %>">View Details</a></h3>
<% end %>

<% @genre.songs.each do |song| %>
  <h2><%= song.name %></h2>
  <h3><a href="/songs/<%= song.slug %>">View Details</a></h3>
<% end %>