<h1>Create new Song </h1>
<form method="post" action="/songs">
  <label for="Name">Name: <input type="text" id="Name" name="song[name]"></label>
  <br>
  Genres:
  <br>
  <% @genres.each do |genre| %>
  <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %>
  <% end %>
  <br>
  Artist: <input type="text" name="artist[name]" id="Artist Name">
  <br>
  <label for="new_genre">New Genre:<input type="text" name="genre[name]"></label>


  <br>
  <input type="submit" value="Create">
</form>
